<div class="jumbotron">
  <h1>Stylish plus size clothing</h1>
  <h2>Discover new designers and brands!</h2>
</div>

<div class="center">
  <div class="row">
    <% @listings.each do |listing| %>
      <div class="col-md-3">
        <div class="thumbnail">

          <div class="caption">
            <h3><%= listing.name %></h3>
            <p><%= number_to_currency(listing.price) %></p>
            
            </div>
        </div>
      </div>
    <% end %>
  </div>
</div>    

<br>

<% if user_signed_in? %>
  <%= link_to 'New Listing', new_listing_path, class: "btn btn-link" %>
<% end %>